{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "src/",
    "paths": {
      "components/*": ["components/*"],
      "helpers/*": ["helpers/*"],
      "context/*": ["context/*"],
      "assets/*": ["assets/*"],
      "routes/*": ["routes/*"],
      "hooks/*": ["hooks/*"],
      "pages/*": ["pages/*"],
      "store/*": ["store/*"],
      "tests/*": ["tests/*"],
      "utils/*": ["utils/*"],
      "libs/*": ["libs/*"],
      "api/*": ["api/*"],
      "ui/*": ["ui/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./json-server/index.js",
    "./config/jest/setupTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./**/*.ts",
    "./**/*.tsx"
  ]
}
