{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "src/",
    "paths": {
      "common/*": ["common/*"],
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "store/*": ["store/*"],
      "ui/*": ["ui/*"],
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./json-server/index.js",
    "./config/jest/setupTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./**/*.ts",
    "./**/*.tsx"
  ]
}
